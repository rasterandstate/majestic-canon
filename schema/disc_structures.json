{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://majestic.canon/schema/disc-structures",
  "title": "Disc Structures Mapping",
  "description": "Maps structural_hash (64-char sha256 hex) to slot and role. Deterministic. Keys must be 64 hex chars.",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-fA-F0-9]{64}$": {
      "type": "object",
      "required": ["slot", "role"],
      "properties": {
        "slot": { "type": "integer", "minimum": 1 },
        "role": { "type": "string", "enum": ["feature", "feature_sd_copy", "bonus", "soundtrack", "unknown"] }
      }
    }
  }
}
